<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainMenu">
    <GridPane prefHeight="500.0" prefWidth="800.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="208.0" minWidth="10.0" prefWidth="208.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="160.0" minWidth="10.0" prefWidth="141.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="124.0" minWidth="10.0" prefWidth="90.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="166.0" minWidth="10.0" prefWidth="149.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="212.0" minWidth="10.0" prefWidth="212.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>

        <Label onMouseClicked="#showUsername" prefHeight="17.0" prefWidth="211.0" text="   ðŸ”´ show my Username"
               textFill="#00ff26" GridPane.rowIndex="4">
            <font>
                <Font name="Comic Sans MS" size="18.0"/>
            </font>
            <effect>
                <DropShadow blurType="ONE_PASS_BOX" spread="0.88"/>
            </effect>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Label>
        <Circle accessibleRole="BUTTON" fill="#00ff1a" onMouseClicked="#startNewGame" radius="46.0" stroke="BLACK"
                strokeType="INSIDE" GridPane.columnIndex="2" GridPane.rowIndex="5">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
            <effect>
                <InnerShadow/>
            </effect>
        </Circle>
        <Label onMouseClicked="#startNewGame" prefHeight="17.0" prefWidth="90.0" text="    New Game" textFill="WHITE"
               GridPane.columnIndex="2" GridPane.rowIndex="5">
            <font>
                <Font name="Papyrus" size="14.0"/>
            </font>
            <effect>
                <DropShadow height="34.11" radius="14.0075" spread="0.87" width="23.92"/>
            </effect>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Label>
        <Circle accessibleRole="BUTTON" fill="#00ff1a" onMouseClicked="#startLastGame" radius="46.0" stroke="BLACK"
                strokeType="INSIDE" GridPane.columnIndex="2" GridPane.rowIndex="7">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
            <effect>
                <InnerShadow/>
            </effect>
        </Circle>
        <VBox onMouseClicked="#startLastGame" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="2"
              GridPane.rowIndex="7">
            <Label prefHeight="17.0" prefWidth="90.0" text="   continue" textFill="WHITE">
                <font>
                    <Font name="Papyrus" size="18.0"/>
                </font>
                <effect>
                    <DropShadow height="34.11" radius="14.0075" spread="0.87" width="23.92"/>
                </effect>
            </Label>
            <Label prefHeight="17.0" prefWidth="90.0" text="      last game" textFill="WHITE">
                <font>
                    <Font name="Papyrus" size="14.0"/>
                </font>
                <effect>
                    <DropShadow height="34.11" radius="14.0075" spread="0.87" width="23.92"/>
                </effect>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Label>
        </VBox>
        <Label onMouseClicked="#goToProfileMenu" prefHeight="25.0" prefWidth="198.0" text="   ðŸ”´ Profile Menu"
               textFill="#00ff26" GridPane.columnIndex="4" GridPane.rowIndex="4">
            <font>
                <Font name="Comic Sans MS" size="18.0"/>
            </font>
            <effect>
                <DropShadow blurType="ONE_PASS_BOX" spread="0.88"/>
            </effect>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Label>
        <Label onMouseClicked="#goToSettingMenu" prefHeight="25.0" prefWidth="209.0" text="   ðŸ”´ Setting Menu"
               textFill="#00ff26" GridPane.columnIndex="4" GridPane.rowIndex="5">
            <font>
                <Font name="Comic Sans MS" size="18.0"/>
            </font>
            <effect>
                <DropShadow blurType="ONE_PASS_BOX" spread="0.88"/>
            </effect>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Label>
        <Label onMouseClicked="#showScoreTable" prefHeight="25.0" prefWidth="203.0" text="   ðŸ”´ Score Table"
               textFill="#00ff26" GridPane.rowIndex="5">
            <font>
                <Font name="Comic Sans MS" size="18.0"/>
            </font>
            <effect>
                <DropShadow blurType="ONE_PASS_BOX" spread="0.88"/>
            </effect>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Label>
        <Label onMouseClicked="#exit" prefHeight="17.0" prefWidth="126.0" text="   ðŸ”´ Exit Game" textFill="#00ff26"
               GridPane.columnIndex="4" GridPane.rowIndex="6">
            <font>
                <Font name="Comic Sans MS" size="18.0"/>
            </font>
            <effect>
                <DropShadow blurType="ONE_PASS_BOX" spread="0.88"/>
            </effect>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Label>
    </GridPane>
</AnchorPane>
